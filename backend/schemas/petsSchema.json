{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "petId": {
      "type": "integer",
      "description": "The unique identifier for the pet."
    },
    "name": {
      "type": "string",
      "description": "The name of the pet.",
      "minLength": 1
    },
    "breed": {
      "type": "string",
      "description": "The breed of the pet.",
      "minLength": 1
    },
    "age": {
      "type": "string",
      "description": "The age of the pet.",
      "minLength": 1
    },
    "size": {
      "type": "string",
      "description": "The size of the pet.",
      "minLength": 1
    },
    "gender": {
      "type": "string",
      "description": "The gender of the pet.",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "description": "The type of the pet.",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "A description of the pet."
    },
    "photo": {
      "type": "string",
      "description": "URL of the pet's photo."
    },
    "adopted": {
      "type": "string",
      "description": "The adoption status of the pet."
    },
    "contact": {
      "type": "string",
      "description": "The Contact  information of the Pet"
    }
  },
  "required": ["name", "breed", "age", "size", "gender", "type"]
}
